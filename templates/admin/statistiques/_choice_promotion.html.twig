{% extends '@EasyAdmin/layout.html.twig' %}

{% block main %}
    {% if promotionsList|length == 0 %}
        <div class="card-body px-0 pb-2">
            <div class="d-flex align-items-center justify-content-center">
                <div class="text-center">
                    <p class="fs-3"> <span class="text-danger">Opps!</span> {{'error'|trans}}</p>
                    <p class="lead">
                        {{'reload_page'|trans}}
                    </p>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6 class="text-center">{{'list_promotions_title'|trans}}</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center justify-content-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">{{'label'|trans}}</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">{{'count_users_title'|trans}}</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">{{'count_quiz_title'|trans}}</th>
                                    </tr>
                                </thead>
                                    <tbody>
                                        {% for promotion in promotionsList %}
                                            <tr>
                                                <td>
                                                    <div class="d-flex px-2">
                                                        <div class="my-auto">
                                                            <h6 class="mb-0 text-sm"><a style="cursor:pointer" href="{{ path('show_admin_statistiques_quiz_list', {'id': promotion.id}) }}">{{promotion.libelle}}</a></h6>
                                                        </div>
                                                    </div>
                                                </td>

                                                <td class="align-middle text-center">
                                                    <div class="d-flex align-items-center justify-content-center">
                                                        <span class="me-2 text-xs font-weight-bold">{{ promotion.users|length }}</span>
                                                    </div>
                                                </td>

                                                <td class="align-middle text-center">
                                                    <div class="d-flex align-items-center justify-content-center">
                                                        <span class="me-2 text-xs font-weight-bold">{{ promotion.quizzes|length }}</span>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
{% endblock main %}
