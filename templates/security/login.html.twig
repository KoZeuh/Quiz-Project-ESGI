{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="page-header">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">{{'welcome_back_login_title'|trans}}</h3>
                                <p class="mb-0">{{'welcome_back_login_paragraph'|trans}}</p>
                            </div>

                            <div class="card-body">
                                <form role="form" method="post">
                                    <label for="username">{{'email'|trans}}</label>

                                    <div class="mb-3">
                                        <input type="email" class="form-control" value="{{last_username}}" name="_username" id="username" autocomplete="email" required autofocus>
                                    </div>

                                    <label for="password">{{'password'|trans}}</label>

                                    <div class="mb-3">
                                        <input type="password" class="form-control" name="_password" id="password" autocomplete="current-password" required>
                                    </div>

                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="_remember_me" name="_remember_me">
                                        <label class="form-check-label" for="_remember_me">{{'remember_me'|trans}}</label>
                                    </div>

                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                    <div class="text-center">
                                        <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">{{'login'|trans}}</button>
                                    </div>
                                </form>
                            </div>

                            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                <p class="mb-4 text-sm mx-auto">
                                    {{'dont_have_account'|trans}}
                                    <a href="{{path('app_register')}}" class="text-info text-gradient font-weight-bold">{{'register'|trans}}</a>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                            <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('../assets/img/curved-images/curved{{random(0, 16)}}.jpg')">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
